{
    "compilerOptions": {
        "outDir": "./wwwroot/dist/",
        "sourceMap": true,
        "strict": true,
        "module": "esNext",
        "moduleResolution": "node",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "isolatedModules": false,
        "experimentalDecorators": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
          "dom",
          "es5",
          "es2015",
          "es2015.promise"
        ]
    },
    "include": [
        "./ClientApp/**/*"
    ],
    "exclude":[
      "node_modules"
    ]
}
